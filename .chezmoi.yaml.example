data:
  # Git information
  git_name: "Your Name"
  git_email: "your.email@example.com"
  
  # Installation options
  install_vscode: 'y'
  install_cursor: 'y'
  is_work_machine: 'n'
  
  # Editor preferences
  nvim: true
  
  # NOTE: Sensitive information should be in .chezmoidata.local.yaml
  # which is not tracked by git
  
  include:
    local:
      - "~/.local/share/chezmoi/.chezmoidata.local.yaml"

# Editor settings
merge:
  command: "code"
  args: ["-w", "-m"]

edit:
  command: "code"
  args: ["-w"]