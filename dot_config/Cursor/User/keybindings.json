[
  // Terminal
  {
    "key": "cmd+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "alt+t",
    "command": "workbench.action.terminal.new"
  },
  
  // Split editor
  {
    "key": "cmd+\\",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "alt+cmd+right",
    "command": "workbench.action.moveEditorToNextGroup"
  },
  {
    "key": "alt+cmd+left",
    "command": "workbench.action.moveEditorToPreviousGroup"
  },
  
  // Quick file operations
  {
    "key": "cmd+n",
    "command": "explorer.newFile"
  },
  {
    "key": "shift+cmd+n",
    "command": "explorer.newFolder"
  },
  
  // Navigate between tabs
  {
    "key": "alt+cmd+[",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "alt+cmd+]",
    "command": "workbench.action.nextEditor"
  },
  
  // File management
  {
    "key": "cmd+s",
    "command": "workbench.action.files.save"
  },
  {
    "key": "shift+cmd+s",
    "command": "workbench.action.files.saveAll"
  },
  
  // DevOps specific keybindings
  {
    "key": "shift+cmd+k",
    "command": "workbench.view.extension.terraform",
    "when": "workbench.view.extension.terraform.enabled"
  },
  {
    "key": "shift+cmd+d",
    "command": "workbench.view.extension.dockerView",
    "when": "workbench.view.extension.dockerView.enabled"
  },
  {
    "key": "shift+cmd+g",
    "command": "workbench.view.scm"
  },
  
  // Cursor AI keybindings
  {
    "key": "ctrl+shift+space",
    "command": "cursor.showChatView"
  },
  {
    "key": "ctrl+shift+i",
    "command": "cursor.showInstructPanel"
  },
  {
    "key": "alt+\\",
    "command": "cursor.accept"
  },
  {
    "key": "ctrl+shift+e",
    "command": "cursor.action.aiExplain"
  },
  {
    "key": "ctrl+shift+d",
    "command": "cursor.action.aiDocument"
  },
  {
    "key": "ctrl+shift+r",
    "command": "cursor.action.aiRefactor"
  },
  {
    "key": "ctrl+shift+f",
    "command": "cursor.action.aiFindBugs"
  }
] 